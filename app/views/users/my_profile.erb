
<% if flash[:message] != nil %>
    <div class="alert"><%= flash.now[:message] %></div>
<% end %>
<p><%= @user.username.titleize %>'s College Checklist:</p>
<table class="table table-hover table-striped" >
  <tr class="info">
        <th><h4>Name</h4></th>
        <th><h4>Pay Application Fee</h4></th>
        <th><h4>Submit Application</h4></th>
        <th><h4>College Visit</h4></t4>
        <th><h4></h4></t4>
        
  </tr>

<% current_user.colleges.each do |college| %>
<tr style="text-align:left;">
<td><a href="/colleges/<%= college.id %>"><%= college.name %></a></td>
<td><input type="checkbox" id="college[pay_app_fee]" name="college[pay_app_fee]" value="<%= college.pay_app_fee %>" <%= "checked" if college.pay_app_fee %>/></td>
<td><input type="checkbox" id="college[submit_application]" name="college[submit_application]" value="<%= college.submit_application %>" <%= "checked" if college.submit_application %>/></td>
<td><%= college.college_visit.strftime("%a %m-%d-%Y") %></td>
<td><a href="/colleges/<%= college.id %>/edit"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
</tr>
<% end %>
</table>

<br><br>
<form action="<%="/colleges/new"%>" method="GET">
  <i class="fa fa-plus" aria-hidden="true"></i>
  <input type="submit" value="Add Another School">
</form>